{
  "name": "vaporBoy",
  "displayName": "VaporBoy",
  "author": "Aaron Turner",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "description": "Coming soon!",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run preact:dev",
    "precommit": "pretty-quick --staged",
    "prettier:fix":
      "npx prettier --write '**/*.js' '**/*.scss' '**/*.css' '**/*.json' '!www/**/*' '!platforms/**/*' '!build/**/*' '!plugins/**/*'",
    "preact:start":
      "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "preact:build": "preact build --template src/template.html --dest www",
    "preact:build:watch":
      "npx chokidar '**/*.js' '**/*.scss' '**/*.css' '**/*.json' '!www/**/*' '!platforms/**/*' '!build/**/*' '!plugins/**/*' -c \"npm run preact:build\"",
    "preact:serve": "npm run build && preact serve",
    "preact:dev": "preact watch --template src/template.html",
    "preact:lint": "eslint src",
    "cordova:serve": "npx cordova run browser",
    "cordova:dev":
      "npx concurrently --kill-others --names \"PREACT,CORDOVA\" -c \"bgMagenta.bold,bgBlue.bold\" \"npm run preact:build:watch\" \"npm run cordova:serve\""
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": ["browser"]
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": ["build/*"],
  "dependencies": {
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "cordova-browser": "^5.0.3",
    "cordova-plugin-whitelist": "^1.3.3"
  },
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.5.1",
    "cordova": "^8.0.0",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "husky": "^0.14.3",
    "if-env": "^1.0.0",
    "node-sass": "^4.9.0",
    "preact-cli": "^2.0.0",
    "prettier": "1.12.1",
    "pretty-quick": "^1.4.1",
    "sass-loader": "^7.0.1"
  }
}
